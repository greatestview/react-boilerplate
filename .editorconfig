root = true

[*]
indent_style = space
indent_size = 2
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
end_of_line = lf
max_line_length = 80

[*.{php}]
indent_size = 4

[*.{css,scss,js,jsx,json,ts,tsx}]
indent_size = 2

[*.{yml,yaml}]
indent_size = 2
indent_style = space

[*.{diff,md}]
trim_trailing_whitespace = false

[CHANGELOG.md]
indent_size = false
